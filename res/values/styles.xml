<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.fuerteint.proportioncalculator">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_text">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calculate_text_letters">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_number_text</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calculate_text_numbers">
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/black_number_text</item>
        <item name="android:background">@drawable/trojcl_bckgr_editbox_number</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="minSize">@dimen/text_size_12</item>
        <item name="maxSize">@dimen/text_size_30</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calculate_text_numbers_normal" parent="calculate_text_numbers">
        <item name="android:textColor">@color/gray_x</item>
    </style>

    <style name="calculate_text_numbers_editable" parent="calculate_text_numbers">
        <item name="android:textColor">@color/black_number_text</item>
    </style>

    <style name="calculate_text_result">
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/black_number_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="key">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="key_number" parent="key">
        <item name="android:background">@drawable/selector_key_number</item>
    </style>

    <style name="key_function" parent="key">
        <item name="android:background">@drawable/selector_key_function</item>
    </style>

</resources>