<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_text">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="calculate_text_letters">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black_number_text</item>
    </style>
    
    <style name="calculate_text_numbers">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/black_number_text</item>
    </style>

     <style name="calculate_text_result">
        <item name="android:textSize">@dimen/text_size_26</item>
        <item name="android:textColor">@color/black_number_text</item>
    </style>
    
</resources>