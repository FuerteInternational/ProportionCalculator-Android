<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboardBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keyboard_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_1"
            style="@style/key_number"
            android:text="@string/key_1" />

        <Button
            android:id="@+id/key_2"
            style="@style/key_number"
            android:text="@string/key_2" />

        <Button
            android:id="@+id/key_3"
            style="@style/key_number"
            android:text="@string/key_3" />

        <RelativeLayout
            android:id="@+id/key_c"
            style="@style/key_function" >

            <com.fuerteint.proportioncalculator.views.TextViewPlus
                android:id="@+id/textViewPlus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/key_c"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_4"
            style="@style/key_number"
            android:text="@string/key_4" />

        <Button
            android:id="@+id/key_5"
            style="@style/key_number"
            android:text="@string/key_5" />

        <Button
            android:id="@+id/key_6"
            style="@style/key_number"
            android:text="@string/key_6" />

        <RelativeLayout
            android:id="@+id/key_back"
            style="@style/key_function" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ico_delete" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/key_7"
            style="@style/key_number"
            android:text="@string/key_7" />

        <Button
            android:id="@+id/key_8"
            style="@style/key_number"
            android:text="@string/key_8" />

        <Button
            android:id="@+id/key_9"
            style="@style/key_number"
            android:text="@string/key_9" />

        <RelativeLayout
            android:id="@+id/key_plusminus"
            style="@style/key_function" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ico_minus" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>

        <Button
            android:id="@+id/key_0"
            style="@style/key_number"
            android:text="@string/key_0" />

        <RelativeLayout
            android:id="@+id/key_dot"
            style="@style/key_function" >

            <com.fuerteint.proportioncalculator.views.TextViewPlus
                android:id="@+id/textViewPlus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/key_dot"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>