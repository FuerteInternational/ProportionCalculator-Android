<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trojcl_bckgr_btm_arrow"
    android:gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/resultBox"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/middle_box_padding"
        android:background="@drawable/result_field" >

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/result"
            style="@style/calculate_text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        
    </RelativeLayout>
    

</LinearLayout>