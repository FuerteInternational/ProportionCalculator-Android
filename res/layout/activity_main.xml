<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.fuerteint.proportioncalculator"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <ToggleButton
            android:id="@+id/button_prima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_toggle_left"
            android:textColor="@drawable/selector_text_button_toggle"
            android:textOff="@string/button_normal"
            android:textOn="@string/button_normal" />

        <ToggleButton
            android:id="@+id/button_neprima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_toggle_right"
            android:textColor="@drawable/selector_text_button_toggle"
            android:textOff="@string/button_invert"
            android:textOn="@string/button_invert" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/resultBox"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/pc_bcg_segment_green" >

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/result"
            style="@style/calculate_text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/textViewPlus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="x=" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="300dp"
        android:layout_height="205dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/trojcl_bckgr_editbox" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewC"
            android:layout_below="@+id/textViewA"
            android:layout_toLeftOf="@+id/textViewB"
            android:layout_toRightOf="@+id/textViewA"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1" >

                <com.fuerteint.proportioncalculator.views.EditTextViewPlus
                    android:id="@+id/boxA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    style="@style/calculate_text_numbers"
                    android:hint="@string/a" />

                <com.fuerteint.proportioncalculator.views.EditTextViewPlus
                    android:id="@+id/boxB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/b"
                    style="@style/calculate_text_numbers" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1" >

                <com.fuerteint.proportioncalculator.views.EditTextViewPlus
                    android:id="@+id/boxC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/c"
                    style="@style/calculate_text_numbers" >

                    <requestFocus />
                </com.fuerteint.proportioncalculator.views.EditTextViewPlus>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/calculate_text_numbers"
                    android:text="@string/x" />
            </LinearLayout>

        </LinearLayout>

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/textViewA"
            style="@style/calculate_text_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="@dimen/letter_margin_horizontal"
            android:paddingTop="@dimen/letter_margin_vertical"
            android:text="@string/a" />

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/textViewB"
            style="@style/calculate_text_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/letter_margin_horizontal"
            android:paddingTop="@dimen/letter_margin_vertical"
            android:text="@string/b" />

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/textViewC"
            style="@style/calculate_text_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="@dimen/letter_margin_vertical"
            android:paddingLeft="@dimen/letter_margin_horizontal"
            android:text="@string/c" />

        <com.fuerteint.proportioncalculator.views.TextViewPlus
            android:id="@+id/textViewX"
            style="@style/calculate_text_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="@dimen/letter_margin_vertical"
            android:paddingRight="@dimen/letter_margin_horizontal"
            android:text="@string/x" />

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/pc_arrow_down" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/pc_arrow_down" />

    </RelativeLayout>

    <com.fuerteint.proportioncalculator.views.TextViewPlus
        android:id="@+id/formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/keyboardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

    </FrameLayout>

</RelativeLayout>